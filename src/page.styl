
#fullscr-toggler
  display: none !important
  margin-top:-28px !important; 

@font-face
  font-family "montserrat"
  src url("../fonts/montserrat.woff") format("woff")

*
  box-sizing border-box
  font-family "montserrat"

::-webkit-scrollbar
  width 4px
  height 4px

::-webkit-scrollbar-track
  width 4px
  background hsl(0,90,95)

::-webkit-scrollbar-thumb
  background hsl(0,50,80)
  border-radius 2px

body
  margin 0px
  overflow hidden
  position absolute
  width 100%
  height 100%
  background url("../pics/bg.jpg") center center
  background-attachment fixed

.desk
  background hsla(240,70,10,0.8)
  position absolute
  color white
  font-size 100px

  .name
    font-family monospace
    margin 20px

  iframe
    width 100%
    height 100%

#view, #overview
  -webkit-transition-duration 0.5s
  transition-duration 0.5s

#view
  position absolute
  left 0px
  top 0px

#console
  position absolute
  top 0px
  left 0px
  width 100%
  height 100%
  background hsla(340,80,10,0.9)
  color hsl(60,20,90)
  font-family monospace
  font-size 20px

#text
  background hsla(0,0,0,0)
  position absolute
  top 100px
  left 10%
  width 50%
  height 400px
  border none
  outline none
  resize none
  color hsl(60,20,90)
  font-family monospace
  font-size 18px
  line-height 24px
  background hsla(240,80,80,0.1)
  padding 10px

#output
  position absolute
  padding 10px
  left 60%
  top 100px
  width 40%
  height 500px
  background hsla(120,80,80,0.1)