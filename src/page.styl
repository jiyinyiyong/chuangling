
#fullscr-toggler
  display: none !important
  margin-top:-28px !important; 

@font-face
  font-family "montserrat"
  src url("../fonts/montserrat.woff") format("woff")

*
  box-sizing border-box
  font-family "montserrat"

body
  margin 0px
  overflow hidden
  position absolute
  width 100%
  height 100%
  background url("../pics/bg.jpg")
  background-size 100%

.desk
  background hsla(240,70,10,0.8)
  position absolute
  color white
  padding 20px
  font-size 100px
  font-family monospace
  box-shadow 0px 0px 20px hsl(320,80,30)

#view, #overview
  -webkit-transition-duration 0.5s
  transition-duration 0.5s

#view
  position absolute
  left 0px
  top 0px

#console
  position absolute
  top 0px
  left 0px
  width 100%
  height 100%
  background hsla(340,80,10,0.9)

#text
  background hsla(0,0,0,0)
  position absolute
  top 100px
  left 200px
  width 600px
  height 400px
  border none
  // outline none
  resize none
  color hsl(60,20,90)
  font-family monospace
  font-size 20px